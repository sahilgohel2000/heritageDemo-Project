<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="1">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.50">

    <ImageView
        android:id="@+id/iv_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_background_quiz_one"/>

    <TextView
        android:id="@+id/tv_quiestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:lines="3"
        android:text="Heritage Site Quiz Question?"
        android:textColor="@color/white"
        android:textSize="25dp" />
</RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15.00dp"
            android:paddingTop="20.00dp"
            android:paddingRight="15.00dp"
            android:paddingBottom="20.00dp">

            <LinearLayout
                android:id="@+id/rg_question"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4">

                <Button
                    android:id="@+id/rb_option_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/gray_light"
                    android:gravity="center"
                    android:text="Mahatma Gandhi"
                    android:visibility="visible"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/rb_option_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/gray_light"
                    android:gravity="center"
                    android:text="Sardar Patel"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/rb_option_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/gray_light"
                    android:gravity="center"
                    android:text="JawaharLal Nehru"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/rb_option_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/gray_light"
                    android:gravity="center"
                    android:text="Dr.Bhimrav Ambedctor"
                    android:textSize="18dp"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"/>

            </LinearLayout>

        </LinearLayout>
        
    </ScrollView>
</LinearLayout>